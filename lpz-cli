#!/bin/sh
# dependencies(these might be good) --> grep, sed, curl

c_red="\033[1;31m"
c_green="\033[1;32m"
c_yellow="\033[1;33m"
c_blue="\033[1;34m"
c_magenta="\033[1;35m"
c_cyan="\033[1;36m"
c_reset="\033[0m"

msgLine="${c_yellow}-------------\n"

msg_help () {
	while IFS= read line; do
		printf "%s\n" "$line"
	done <<-EOF
	USAGE: $prog <query>
	 -h	 show this help message
	EOF
}

die () {
  printf "$c_red %s$c_reset\n" "$*" >&2
  exit 1
}

while :; do
  tput reset
  printf "$msgLine"
  printf "$c_blue[${c_cyan}%s$c_blue] $c_green%s$c_reset\n" "r" "r option"
  printf "$c_blue[${c_cyan}%s$c_blue] $c_green%s$c_reset\n" "a" "a option"
  printf "$c_blue[${c_cyan}%s$c_blue] $c_green%s$c_reset\n" "h" "h option"
  printf "$c_blue[${c_cyan}%s$c_blue] $c_red%s$c_reset\n" "q" "exit"
  printf "$msgLine\n"
  printf "${c_yellow}Enter choice:${c_cyan} "
  read choice

  case $choice in
    n)
      continue
      ;;
    p)
      continue
      ;;
    s)
      continue
      ;;
    r)
      continue
      ;;
    a)
      continue
      ;;
    h)
      continue
      ;;
    q)
      break
      ;;
    *)
      die "invalid choice"
      ;;
  esac

done
